extends layout

block styles
  link(rel='stylesheet', href='/stylesheets/contacts.css')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css')

block content
  .page-header
    h1 Edit Contact
    .page-actions
      a.btn.btn-outline-primary(href='/contacts')
        i.fas.fa-arrow-left.mr-1
        | Back to Contacts

  .add-contact-form
    form(action=`/contacts/edit/${contact.id}` method="post")
      .form-grid
        .form-group
          label(for="name") Name
          input.form-control(type="text" name="name" id="name" value=contact.name)
        .form-group
          label(for="surname") Surname
          input.form-control(type="text" name="surname" id="surname" value=contact.surname)
        .form-group
          label(for="phoneNumber") Phone Number *
          input.form-control(type="text" name="phoneNumber" id="phoneNumber" value=contact.phoneNumber required)
        .form-group
          label(for="email") Email
          input.form-control(type="email" name="email" id="email" value=contact.email)
        .form-group
          label(for="birthday") Birthday
          - var formattedBirthday = contact.birthday ? new Date(contact.birthday).toISOString().split('T')[0] : '';
          input.form-control(type="date" name="birthday" id="birthday" value=formattedBirthday)
      .form-footer
        a.btn.btn-outline-secondary(href="/contacts") Cancel
        button.btn.btn-primary(type="submit") Save Changes
