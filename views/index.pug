extends auth-layout

block content
  .auth-card
    h2 Welcome to BSS Sender
    p.welcome-text A powerful WhatsApp Bulk Sender System that helps you connect with your contacts easily.
    
    .welcome-actions
      a.btn.btn-primary(href="/login") Log In
      a.btn.btn-outline-primary.mt-3(href="/register") Register

block styles
  style.
    .welcome-text {
      margin-bottom: 30px;
      color: var(--gray);
      text-align: center;
    }
    
    .welcome-actions {
      display: flex;
      flex-direction: column;
      margin-top: 20px;
    }
